<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/ticker"
        style="@style/TickerTextView" />
    <TextView
        android:id="@+id/time"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignBottom="@id/ticker"
        android:paddingStart="7dp"
        android:paddingEnd="5dp"
        android:textSize="10sp"
        />

    <TextView
        android:id="@+id/priceEdge"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/back"
        android:width="85dp"
        android:layout_toEndOf="@id/ticker"
        android:gravity="center_vertical"
        android:textAlignment="viewEnd"
        android:paddingEnd="4dp"
        />
    <TextView
        android:id="@+id/price"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignEnd="@id/priceEdge"
        android:background="@drawable/back"
        android:layout_alignBottom="@id/ticker"
        android:layout_below="@+id/priceEdge"
        android:layout_toEndOf="@id/ticker"
        android:gravity="center_vertical"
        android:textAlignment="viewEnd"
        android:textColor="@color/profit"
        android:textSize="20sp"
        android:paddingEnd="4dp"
        />


    <TextView
        android:id="@+id/cciEdge"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/back"
        android:width="65dp"
        android:layout_toEndOf="@id/price"
        android:textAlignment="center"
        android:gravity="center_vertical"
        />
    <TextView
        android:id="@+id/cci"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignEnd="@id/cciEdge"
        android:background="@drawable/back"
        android:layout_alignBottom="@id/ticker"
        android:layout_below="@+id/cciEdge"
        android:layout_toEndOf="@id/price"
        android:textAlignment="center"
        android:gravity="center_vertical"
        />

    <TextView
        android:id="@+id/macdEdge"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/back"
        android:width="65dp"
        android:layout_toEndOf="@id/cci"
        android:textAlignment="center"
        android:gravity="center_vertical"
        />
    <TextView
        android:id="@+id/macd"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignEnd="@id/macdEdge"
        android:background="@drawable/back"
        android:layout_alignBottom="@id/ticker"
        android:layout_below="@+id/macdEdge"
        android:layout_toEndOf="@id/cci"
        android:textAlignment="center"
        android:gravity="center_vertical"
        />

    <TextView
        android:id="@+id/diffEdge"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/back"
        android:width="65dp"
        android:layout_toEndOf="@id/macd"
        android:textAlignment="center"
        android:gravity="center_vertical"
        />
    <TextView
        android:id="@+id/diff"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignEnd="@id/diffEdge"
        android:background="@drawable/back"
        android:layout_alignBottom="@id/ticker"
        android:layout_below="@+id/diffEdge"
        android:layout_toEndOf="@id/macd"
        android:textAlignment="center"
        android:gravity="center_vertical"
        />


</RelativeLayout >